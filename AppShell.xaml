<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AndroidGunFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AndroidGunFinal"
    Shell.FlyoutBehavior="Disabled">

    <Shell.ToolbarItems>
        <ToolbarItem Text="Menu" Clicked="GoToMenu" />
    </Shell.ToolbarItems>

    <ShellContent
        Title="Loading"
        ContentTemplate="{DataTemplate local:Loading}"
        Route="MainPage"
        Shell.FlyoutItemIsVisible="False"
        />
    
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Login}"
        Route="MainPage"
        Shell.FlyoutBehavior="Disabled"
        Shell.FlyoutItemIsVisible="False"
        NavigationPage.HasNavigationBar="False"/>

    <FlyoutItem>
        <ShellContent
        Title="PrzyjÄ™cie"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Wydanie"
        ContentTemplate="{DataTemplate local:Wydanie}"
        Route="Wydanie" />
    </FlyoutItem>   


</Shell>
